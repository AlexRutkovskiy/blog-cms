{
    "name": "cms-server",
    "version": "1.0.0",
    "description": "server for cms",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "copy": "cp src/logs/error.log ./dist/logs/error.log && cp src/logs/success.log ./dist/logs/success.log",
        "build": "rimraf ./dist && tsc && tsc-alias && mkdir ./dist/logs && npm run copy",
        "start:prod": "npm run build && cross-env NODE_ENV=production dotenv -e .env node ./dist/index.js",
        "start:dev": "nodemon --config nodemon.json src/index.ts",
        "test": "cross-env NODE_ENV=test dotenv -e .env jest",
        "test:watch": "cross-env NODE_ENV=test dotenv -e .env jest --watch",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "prepare": "husky"
    },
    "author": "Alex R",
    "license": "ISC",
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.3.4",
        "morgan": "^1.10.0",
        "uuidv4": "^6.2.13"
    },
    "devDependencies": {
        "@eslint/js": "^9.2.0",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.12.8",
        "@types/uuid": "^9.0.8",
        "dotenv-cli": "^7.4.1",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "module-alias": "^2.2.3",
        "nodemon": "^3.1.0",
        "rimraf": "^5.0.5",
        "tsc-alias": "^1.8.8",
        "tsx": "^4.9.1",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.8.0"
    },
    "_moduleAliases": {
        "@config": "./dist/config",
        "@exceptions": "./dist/exceptions/",
        "@http": "./dist/http/",
        "@models": "./dist/models/",
        "@repository": "./dist/repository/",
        "@routes": "./dist/routes",
        "@services": "./dist/services/",
        "@utils": "./dist/utils/",
        "@dto": "./dist/dto"
    }
}
